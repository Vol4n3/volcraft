// Modal login
section#login_modal.modal.fade.container(tabindex='-1', role='dialog')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                h4.modal-title Authentification
            .modal-body
                fieldset
                    legend *Si tu veux <b>réserver</b> ton pseudo ou te connecter indique ton mot de passe
                    form#auth_log
                        div
                            label(for='chat_pseudo') Pseudo
                            input#chat_pseudo(type='text', name='pseudo', placeholder='John doe')
                        p#warning_pseudo.text-warning.jq-hide dsl, ce pseudo est déja réservé
                        div
                            label(for='chat_password') Mot de passe*
                            input#chat_password(type='password', name='password', placeholder="ce n'est pas obligé")
            .modal-footer.green-theme
                button.btn.btn-transparent(type='button', data-dismiss='modal') Fermer
                button#auth_submit.btn.btn-primary(type='submit', form='auth_log', name='auth_submit') Connexion
